<%= render 'shared/header', title: 'Tickets' %>

<section class="container justify-content-center"> 
  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>Name</th>
        <th scope='col'>Project</th>
        <th scope='col'>Assignee</th>
        <th scope='col'>Status</th>
        <th scope='col'>Tags</th>
        <th scope='col'></th>
      </tr>
    </thead>
  
    <tbody>
      <% @tickets.each do |ticket| %>
        <tr>
          <th scope='row'><%= link_to ticket.name, ticket_path(ticket.id) %></th>
          <th><%= link_to ticket.project.name, project_path(ticket.project.id) %></th>
          <td></td>
          <td><%= titleize(ticket.status) %></td>
          <td></td>
          <td>
            <%= link_to 'Edit', edit_ticket_path(ticket.id) %> 
            <%= link_to 'Delete', ticket_path(ticket.id), method: :delete, data: {confirm: 'Are you sure?'} %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><%= link_to 'New Ticket', new_ticket_path, class: "btn" %></p>

</section>
