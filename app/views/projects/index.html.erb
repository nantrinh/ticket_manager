<%= render 'shared/header', title: 'Projects' %>

<section class="container justify-content-center"> 
  <table class='table'>
    <thead>
      <tr>
        <th scope='col'>Name</th>
        <th scope='col'>Open Tickets</th>
        <th scope='col'>Total Tickets</th>
      </tr>
    </thead>
  
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <th scope='row'><%= link_to project.name, project_path(project.id) %></th>
          <td>0</td>
          <td>0</td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p><%= link_to 'New Project', new_project_path, class: "btn" %></p>

</section>
