<%= render 'shared/errors', obj: @project %>
<section class='container'>
  <%= form_with(model: @project, local: true, html: {autocomplete: 'off'}) do |f| %>
    <div class='form-group'>
      <%= f.label :name%>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8, class: 'form-control' %>
    </div>
    <%= f.submit(options={class: "btn btn-outline-primary mt-3"}) %>
  <% end %>

  <%= render 'shared/back' %>
</section>
